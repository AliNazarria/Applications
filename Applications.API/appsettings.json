{
  "ConnectionStrings": {
    "Database": "data source=.;initial catalog=Application;User id=admin;Password=110;Trusted_Connection=false;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "Redis": "localhost:6379",
    "RabbitMQ": "localhost"
  },
  "HealthCheck": {
    "DelayFromMinute": 10
  },
  "AllowedOrigins": [ "https://localhost:44341" ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Formatting.Compact", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "IsHealthCheck = true"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/app.log-.txt",
                  "rollingInterval": "Day",
                  "restrictedToMinimumLevel": "Debug",
                  "formatter": "Serilog.Formatting.Compact.JsonFormatter, Serilog",
                  "outputTemplate": "----------------------{NewLine}[{Timestamp:HH:mm:ss.fff}][{Level}]{NewLine}{Message:lj}{NewLine}{Properties}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "IsHealthCheck = true"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/healthchecks.log-.txt",
                  "rollingInterval": "Day",
                  "outputTemplate": "----------------------{NewLine}[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}]{NewLine}{Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      }
    ]

  }
}